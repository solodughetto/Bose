{% extends 'base.html.twig' %}

{% block body %}
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Genus</th>
                <th># of species</th>
                <th>Last updated</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for genus in genuses %}
                <tr>
                    <td>{{ genus.name }}</td>
                    <td>{{ genus.speciesCount }}</td>
                    <td>{{ genus.UpdateAd|date('Y-m-d') }}</td>
                    <td>
                        <a href="{{ path('genus_show', {'name': genus.name}) }}">
                            {{ genus.name }}
                        </a>
                        <a href="{{ path('admin_genus_edit', {'id': genus.id }) }}" class="btn btn-xs btn-success"><span class="fa fa-pencil"></span></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}